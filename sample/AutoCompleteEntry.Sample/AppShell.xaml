<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AutoCompleteEntry.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AutoCompleteEntry.Sample.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="With Events">
            <ShellContent ContentTemplate="{DataTemplate views:WithEventsPage}" />        
        </Tab>
        <Tab Title="With Bindings">
            <ShellContent ContentTemplate="{DataTemplate views:WithBindingsPage}" />
        </Tab>
		<Tab Title="No Border">
			<ShellContent ContentTemplate="{DataTemplate views:WithBindingsPage}" />
		</Tab>
	</TabBar>
    
</Shell>
